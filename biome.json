{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "files": {
    "ignore": ["node_modules/", "postcss.config.js", "tailwind.config.js"]
  },
  "javascript": {
    "formatter": {
      "trailingComma": "none"
    }
  },
  "linter": {
    "rules": {
      "all": true,
      "nursery": {
        "noUndeclaredDependencies": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}