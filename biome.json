{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "ignore": [
      "node_modules/",
      "postcss.config.js",
      "tailwind.config.js",
      "src/frontend/components/ui"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "linter": {
    "rules": {
      "all": true,
      "nursery": {
        "all": true,
        "noNamespaceImport": "off",
        "noUndeclaredDependencies": "off"
      }
    }
  }
}